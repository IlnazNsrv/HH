<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Цвет фона по умолчанию -->
            <stroke android:width="4dp" android:color="@android:color/darker_gray" /> <!-- Цвет и ширина края по умолчанию -->
            <corners android:radius="8dp" /> <!-- Радиус скругления по умолчанию -->
        </shape>
    </item>
</selector>